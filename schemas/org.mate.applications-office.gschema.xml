<schemalist gettext-domain="mate-desktop">
  <schema id="org.mate.applications-office" path="/org/mate/desktop/applications/">
    <child name="calendar" schema="org.mate.applications-office.writer"/>
    <child name="tasks" schema="org.mate.applications-office.calc"/>
  </schema>
  <schema id="org.mate.applications-office.writer" path="/org/mate/desktop/applications/writer/">
    <key name="exec" type="s">
      <default>'libreoffice --writer'</default>
      <summary>Default word applicationd</summary>
      <description>Default word application</description>
    </key>
    <key name="needs-term" type="b">
      <default>false</default>
      <summary>Calendar needs terminal</summary>
      <description>Whether the default calendar application needs a terminal to run</description>
    </key>
  </schema>
  <schema id="org.mate.applications-office.calc" path="/org/mate/desktop/applications/calc/">
    <key name="exec" type="s">
      <default>'libreoffice --calc'</default>
      <summary>Default calculating</summary>
      <description>Default calculating application</description>
    </key>
    <key name="needs-term" type="b">
      <default>false</default>
      <summary>Tasks needs terminal</summary>
      <description>Whether the default tasks application needs a terminal to run</description>
    </key>
  </schema>
</schemalist>
